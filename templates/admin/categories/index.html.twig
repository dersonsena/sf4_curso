{% extends 'admin/admin-base.html.twig' %}

{% block title %}Posts{% endblock %}
{% block page_subtitle %}Listagem{% endblock %}

{% block body %}
    <div class="col-md-12">
        <a class="btn btn-success" href="{{ path('admin_post_create') }}">
            <i class="fa fa-plus-circle"></i> Novo Post
        </a>
    </div>

    <div class="col-md-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Criado Em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td><a href="{{ path('admin_post_update', {'id': post.id}) }}">{{ post.title }}</a></td>
                        <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('admin_post_update', {'id': post.id}) }}" class="btn btn-sm btn-default">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('admin_post_delete', {'id': post.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
