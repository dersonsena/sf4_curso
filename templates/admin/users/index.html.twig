{% extends 'admin/admin-base.html.twig' %}

{% block title %}Usuários{% endblock %}
{% block page_subtitle %}Listagem{% endblock %}

{% block body %}
    <div class="col-md-12">
        <a class="btn btn-success" href="{{ path('admin_user_create') }}">
            <i class="fa fa-plus-circle"></i> Novo Usuário
        </a>
    </div>

    <div class="col-md-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Criado Em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>
                            <a href="{{ path('admin_user_update', {'id': user.id}) }}">{{ user.firstName }} {{ user.lastName }}</a>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('admin_user_update', {'id': user.id}) }}" class="btn btn-sm btn-default">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
